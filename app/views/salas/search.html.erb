<div data-role="page">
	<div data-role="header">
    <%= link_to 'Back', "./", "data-icon" => "back", "data-theme" => "b", "data-ajax" => "false" %>
	  <h1>Search</h1>

	</div><!-- /header -->
	<div data-role="content">
		<%= form_tag "listview", :method => 'get' do %>
			<p>
				<%= label_tag(:nombre, "Nombre") %>
				<%= text_field_tag :nombre %>
			</p>
			
			<p>
				 <fieldset data-role="controlgroup", data-type="horizontal">
				<% @instrumentos.each do |instrumento| %>
				<%= label_tag(:instrumentos[instrumento.id], instrumento.nombre) %>
				<%= check_box_tag(:instrumentos[instrumento.id], instrumento.nombre) %>
				<%end%>
				</fieldset>
			</p>
			
			<%= submit_tag "Search" %>
		<% end %>
  </div><!-- /content -->
</div><!-- /page -->